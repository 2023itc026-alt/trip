-- Create database
CREATE DATABASE IF NOT EXISTS trip_db;

-- Use database
USE trip_db;

-- Create trips table
CREATE TABLE IF NOT EXISTS trips (
    id INT AUTO_INCREMENT PRIMARY KEY,
    destination VARCHAR(255) NOT NULL,
    date DATE NOT NULL
);

